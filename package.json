{
  "name": "mgtoy",
  "displayName": "MGToy",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/mgtoy.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "test1111",
          "icon": "myModule/logo.svg"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "package-dependencies",
          "name": "create",
          "icon": "webviewCode/logo.svg",
          "contextualTitle": "Package Explorer"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "package-dependencies", 
        "contents": "## Welcome MGToyÔºÅ\n\n[create](command:mgtoy.create)"
      }
    ],
    "configuration": {
      "title": "Setting",
      "properties": {
      }
    },
    "commands": [
      {
        "command": "mgtoy.create",
        "title": "mgtoy create"
      },
      {
        "command": "mgtoy.open",
        "title": "mgtoy open"
      },
      {
        "command": "mgtoy.reload",
        "title": "mgtoy reload"
      },
      {
        "command": "mgtoy.stopHttp",
        "title": "mgtoy stophttp"
      }
    ],
    "customEditors": [
      {
        "viewType": "MGToy.stlPreview",
        "displayName": "STL Preview",
        "selector": [
          {
            "filenamePattern": "*.stl"
          }
        ]
      },
      {
        "viewType": "MGToy.gzPreview",
        "displayName": "gz Preview",
        "selector": [
          {
            "filenamePattern": "*.mgtoy.gz"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.89.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "ws": "^8.18.3"
  }
}
